<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="kaos">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.kaos.entity.Store</class>
        <class>org.example.kaos.entity.User</class>

        <properties>

            <!-- CONEXIÃ“N -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/kaos"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="76029"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- HIBERNATE -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

        </properties>

    </persistence-unit>
</persistence>