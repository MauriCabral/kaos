<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="kaos">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.kaos.entity.Store</class>
        <class>org.example.kaos.entity.User</class>
        <class>org.example.kaos.entity.Burger</class>
        <class>org.example.kaos.entity.ExtraItem</class>
        <class>org.example.kaos.entity.BurgerVariant</class>
        <class>org.example.kaos.entity.VariantType</class>
        <class>org.example.kaos.entity.Item</class>
        <class>org.example.kaos.entity.Delivery</class>
        <class>org.example.kaos.entity.Order</class>
        <class>org.example.kaos.entity.OrderDetail</class>
        <class>org.example.kaos.entity.PaymentMethod</class>
        <class>org.example.kaos.entity.Topping</class>
        <class>org.example.kaos.entity.OrderDetailTopping</class>

        <properties>

            <!-- CONEXIÃ“N -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/kaos"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- HIBERNATE -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

        </properties>

    </persistence-unit>
</persistence>