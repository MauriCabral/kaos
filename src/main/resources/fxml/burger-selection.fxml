<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.kaos.controller.BurgerSelectionController" stylesheets="@../css/burger-selection.css" prefWidth="780" prefHeight="750" spacing="0">

    <VBox styleClass="header" spacing="6">
        <padding>
            <Insets top="16" right="25" bottom="12" left="25"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="ðŸ”" styleClass="burger-emoji"/>
            <VBox spacing="1">
                <Label text="Personalizar Burger" styleClass="header-title"/>
                <Label fx:id="burgerNameLabel" styleClass="burger-subtitle"/>
            </VBox>
        </HBox>
    </VBox>

    <VBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-padding: 20 25 15 25;">

        <HBox spacing="25" alignment="TOP_LEFT">
            <VBox spacing="12" alignment="TOP_CENTER" prefWidth="260">
                <ImageView fx:id="burgerImageView" fitWidth="200" fitHeight="150"
                           preserveRatio="true" styleClass="burger-image"/>
                <Label fx:id="burgerDescriptionLabel" wrapText="true" prefWidth="220"
                       styleClass="description-label"/>
            </VBox>

            <VBox spacing="12" prefWidth="460" VBox.vgrow="ALWAYS">
                <VBox spacing="6">
                    <Label text="TIPO DE BURGER" styleClass="section-label"/>
                    <ComboBox fx:id="variantComboBox" prefWidth="140" prefHeight="36" styleClass="variant-combo"/>
                    <Label fx:id="llbCbo" text="Selecciona un tipo." styleClass="hint-label"/>
                </VBox>

                <Separator styleClass="elegant-separator"/>

                <VBox spacing="6" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="0">
                        <Label text="TOPPINGS" styleClass="toppings-title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <HBox spacing="8" alignment="CENTER_RIGHT" style="-fx-padding: 0 10 0 0;">
                            <!--<Label text="SÃ­" styleClass="radio-header"/>
                            <Label text="No" styleClass="radio-header"/>-->
                        </HBox>
                    </HBox>

                    <VBox styleClass="toppings-container" VBox.vgrow="ALWAYS">
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                                    prefHeight="300" styleClass="toppings-scroll">
                            <VBox fx:id="toppingsContainer" spacing="3" style="-fx-padding: 8;"/>
                        </ScrollPane>
                    </VBox>
                </VBox>

                <Separator styleClass="elegant-separator"/>

                <VBox spacing="6">
                    <Label text="OBSERVACIONES ESPECIALES" styleClass="section-label"/>
                    <TextArea fx:id="observationsField"
                              promptText="Ej: Sin salsa, cambiar salsa a ..."
                              wrapText="true" prefRowCount="2" styleClass="observations-field"/>
                    <!--<Label text="Solicita modificaciones aquÃ­" styleClass="hint-label"/>-->
                </VBox>
            </VBox>
        </HBox>

        <HBox styleClass="summary-container" spacing="50" alignment="CENTER" prefHeight="80">
            <VBox spacing="3" alignment="CENTER">
                <Label text="BASE" styleClass="summary-label"/>
                <Label fx:id="basePriceLabel" text="0.00" styleClass="price-base"/>
            </VBox>
            <VBox spacing="3" alignment="CENTER">
                <Label text="TOPPINGS" styleClass="summary-label"/>
                <Label fx:id="toppingsPriceLabel" text="0.00" styleClass="price-toppings"/>
            </VBox>
            <VBox spacing="3" alignment="CENTER">
                <Label text="TOTAL" styleClass="summary-total-label"/>
                <Label fx:id="totalPriceLabel" text="0.00" styleClass="price-total"/>
            </VBox>
        </HBox>

    </VBox>

    <HBox styleClass="footer" spacing="12" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="16" right="25" bottom="16" left="25"/>
        </padding>
        <Button text="Cancelar" styleClass="cancel-btn" onAction="#handleCancel"
                minWidth="100" prefHeight="40"/>
        <Button text="Agregar al Pedido" styleClass="confirm-btn" onAction="#handleAddToOrder"
                minWidth="150" prefHeight="40"/>
    </HBox>
</VBox>