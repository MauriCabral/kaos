<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../css/order-history.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kaos.controller.OrderStatisticsController">

    <VBox spacing="15" styleClass="container" AnchorPane.bottomAnchor="15" AnchorPane.leftAnchor="15" AnchorPane.rightAnchor="15" AnchorPane.topAnchor="15">

        <!-- TITLE -->
        <Label styleClass="compact-title" text="Estadísticas de Pedidos" />

        <!-- CHARTS GRID -->
        <GridPane hgap="15" vgap="15" VBox.vgrow="ALWAYS">

            <!-- Pie Chart: Most Sold Burgers Today -->
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5" styleClass="chart-container">
                <HBox alignment="CENTER">
                    <Label text="Más Vendidas - Hoy" styleClass="chart-title" />
                </HBox>
                <PieChart fx:id="dailyBurgersPieChart" VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- Pie Chart: Most Sold Burgers This Week -->
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5" styleClass="chart-container">
                <HBox alignment="CENTER">
                    <Label text="Más Vendidas - Semana" styleClass="chart-title" />
                </HBox>
                <PieChart fx:id="weeklyBurgersPieChart" VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- Bar Chart: Total Sales Per Day -->
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" spacing="5" styleClass="chart-container">
                <HBox alignment="CENTER">
                    <Label text="Ventas Totales por Día" styleClass="chart-title" />
                </HBox>
                <BarChart fx:id="salesPerDayBarChart" VBox.vgrow="ALWAYS">
                    <xAxis>
                        <CategoryAxis label="" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Total" />
                    </yAxis>
                </BarChart>
            </VBox>

        </GridPane>

    </VBox>

</AnchorPane>