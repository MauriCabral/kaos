<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.kaos.controller.OrderController" stylesheets="@../css/order.css">

    <HBox spacing="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- PANEL IZQUIERDO -->
        <VBox spacing="20" prefWidth="750" styleClass="products-panel">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <AnchorPane>
                <Label text="Gestión de Pedidos" styleClass="title-label" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0"/>

                <!-- BOTONES DE ADMINISTRACIÓN -->
                <HBox spacing="10" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <Button fx:id="toppingsBtn" styleClass="edit-products-btn" onAction="#openToppingsManager" visible="false" text="T">
                        <tooltip>
                            <Tooltip text="Gestionar Toppings" />
                        </tooltip>
                        <graphic>
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <Image url="@../image/Edit.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="editProductsBtn" styleClass="edit-products-btn" onAction="#openEditProducts">
                        <tooltip>
                            <Tooltip text="Editar Productos" />
                        </tooltip>
                        <graphic>
                            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                                <Image url="@../image/Edit.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </AnchorPane>

            <!-- SCROLL -->
            <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS" prefViewportHeight="600">
                <FlowPane fx:id="productsFlowPane" styleClass="products-flow-pane" hgap="20" vgap="20"/>
            </ScrollPane>
        </VBox>

        <Separator orientation="VERTICAL"/>

        <!-- DETALLE DEL PEDIDO -->
        <VBox spacing="25" prefWidth="350" styleClass="details-panel">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <Label text="Detalle del Pedido" styleClass="details-title"/>

            <VBox spacing="20" styleClass="selected-product" visible="false" fx:id="selectedProductPanel" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
                <ImageView fitWidth="150" fitHeight="150" preserveRatio="true" styleClass="selected-product-image" fx:id="selectedProductImage"/>
                <Label styleClass="selected-product-name" fx:id="selectedProductName" wrapText="true" textAlignment="CENTER" maxWidth="300"/>

                <VBox spacing="15" alignment="CENTER">
                    <HBox spacing="15" alignment="CENTER">
                        <Button text="-" styleClass="quantity-btn" onAction="#decreaseQuantity" minWidth="40" minHeight="40"/>
                        <Label text="1" styleClass="quantity-label" fx:id="quantityLabel"/>
                        <Button text="+" styleClass="quantity-btn" onAction="#increaseQuantity" minWidth="40" minHeight="40"/>
                    </HBox>

                    <Button text="Agregar al Pedido" styleClass="add-to-order-btn" onAction="#addToOrder" minWidth="200" minHeight="45"/>
                </VBox>
                <Region VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- BOTÓN "VER PEDIDO"-->
            <VBox spacing="15" alignment="BOTTOM_CENTER">
                <Region VBox.vgrow="ALWAYS"/>
                <Button text="Ver Pedido" styleClass="confirm-btn" onAction="#viewOrder" minWidth="250" minHeight="50" prefHeight="50"/>
            </VBox>
        </VBox>
    </HBox>

</AnchorPane>