<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.kaos.controller.OrderController" stylesheets="@../css/order.css">

    <HBox spacing="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- PANEL IZQUIERDO -->
        <VBox spacing="20" prefWidth="750" styleClass="products-panel">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <!-- TÍTULO Y BOTONES -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="title-bar">
                <Label text="Gestión de Pedidos" styleClass="title-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="toppingsBtn" styleClass="edit-products-btn" onAction="#openToppingsManager" visible="false" text="T">
                    <tooltip>
                        <Tooltip text="Gestionar Toppings" />
                    </tooltip>
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                            <Image url="@../image/Edit.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="editProductsBtn" styleClass="edit-products-btn" onAction="#openEditProducts">
                    <tooltip>
                        <Tooltip text="Editar Productos" />
                    </tooltip>
                    <graphic>
                        <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                            <Image url="@../image/Edit.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <!-- SCROLL -->
            <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS" prefViewportHeight="600">
                <FlowPane fx:id="productsFlowPane" styleClass="products-flow-pane" hgap="20" vgap="20"/>
            </ScrollPane>
        </VBox>

        <Separator orientation="VERTICAL"/>

        <!-- DETALLE DEL PEDIDO -->
        <BorderPane prefWidth="350" styleClass="details-panel">
            <padding>
                <Insets top="15" right="25" bottom="15" left="25"/>
            </padding>

            <top>
                <VBox spacing="5" styleClass="order-summary">
                    <Label text="Resumen del Pedido" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
                    <ScrollPane fitToWidth="true" styleClass="order-items-scroll" prefViewportHeight="150">
                        <VBox spacing="3">
                            <VBox fx:id="orderItemsContainer" spacing="3"/>
                            <VBox fx:id="totalsContainer" spacing="3" styleClass="totals-container" visible="false">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label text="Total:" styleClass="total-label"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Label fx:id="totalLabel" text="0.00" styleClass="total-value"/>
                                </HBox>
                            </VBox>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </top>

            <center>
                <VBox spacing="10" styleClass="selected-product" visible="false" fx:id="selectedProductPanel" alignment="TOP_CENTER" prefHeight="120">
                    <ImageView fitWidth="100" fitHeight="100" preserveRatio="true" styleClass="selected-product-image" fx:id="selectedProductImage"/>
                    <Label styleClass="selected-product-name" fx:id="selectedProductName" wrapText="true" textAlignment="CENTER" maxWidth="250"/>
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="-" styleClass="quantity-btn" onAction="#decreaseQuantity" minWidth="30" minHeight="30"/>
                        <Label text="1" styleClass="quantity-label" fx:id="quantityLabel"/>
                        <Button text="+" styleClass="quantity-btn" onAction="#increaseQuantity" minWidth="30" minHeight="30"/>
                    </HBox>
                    <Button text="Agregar al Pedido" styleClass="add-to-order-btn" onAction="#addToOrder" minWidth="160" minHeight="30"/>
                </VBox>
            </center>

            <bottom>
                <HBox alignment="CENTER_RIGHT" styleClass="bottom-bar">
                    <Button text="Ver Pedido" styleClass="confirm-btn" onAction="#viewOrder" minWidth="280" minHeight="45" prefHeight="45"/>
                </HBox>
            </bottom>
        </BorderPane>
    </HBox>

</AnchorPane>