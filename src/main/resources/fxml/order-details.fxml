<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.kaos.controller.OrderDetailsController"
      stylesheets="@../css/order-details.css" prefWidth="800" prefHeight="550" spacing="0">

    <!-- HEADER -->
    <HBox styleClass="header" alignment="CENTER" spacing="10">
        <ImageView fitWidth="28" fitHeight="28" preserveRatio="true">
            <Image url="@../image/logo.png"/>
        </ImageView>
        <Label text="Detalle del Pedido" styleClass="header-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="orderNumberLabel" styleClass="order-number"/>
    </HBox>

    <!-- CONTENIDO PRINCIPAL -->
    <HBox spacing="0" VBox.vgrow="ALWAYS">

        <!-- PANEL IZQUIERDO - ITEMS -->
        <VBox styleClass="items-panel" prefWidth="480" spacing="0">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <Label text="Items del Pedido" styleClass="section-title"/>

            <ScrollPane fitToWidth="true" styleClass="items-scroll" VBox.vgrow="ALWAYS">
                <VBox fx:id="itemsContainer" spacing="6"/>
            </ScrollPane>

            <!-- RESUMEN -->
            <VBox styleClass="summary-container" spacing="6">
                <HBox alignment="CENTER_LEFT" spacing="6">
                    <Label text="Subtotal:" styleClass="summary-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="subtotalLabel" styleClass="summary-value" text="0.00"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="6">
                    <Label text="Delivery:" styleClass="summary-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="deliveryPriceLabel" styleClass="summary-value" text="0.00"/>
                </HBox>
                <Separator styleClass="summary-separator"/>
                <HBox alignment="CENTER_LEFT" spacing="6">
                    <Label text="TOTAL:" styleClass="total-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalLabel" styleClass="total-value" text="0.00"/>
                </HBox>
            </VBox>
        </VBox>

        <Separator orientation="VERTICAL"/>

        <!-- PANEL DERECHO COMPACTADO -->
        <VBox styleClass="actions-panel" prefWidth="320" spacing="10">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <!-- DATOS CLIENTE COMPACTOS -->
            <Label text="Datos del Cliente" styleClass="section-title"/>
            <VBox spacing="4">
                <TextField fx:id="customerNameField" promptText="Nombre*" prefHeight="32"/>
                <TextField fx:id="customerAddressField" promptText="Dirección" prefHeight="32"/>
                <TextField fx:id="customerPhoneField" promptText="Teléfono" prefHeight="32"/>

                <!-- DELIVERY COMPACTO -->
                <VBox spacing="3">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <CheckBox fx:id="deliveryCheckBox" text="Delivery"/>
                        <TextField fx:id="deliveryPriceField" promptText="Precio" prefWidth="80" prefHeight="28" visible="false"/>
                    </HBox>
                    <ComboBox fx:id="deliveryComboBox" promptText="Seleccionar delivery"
                              prefWidth="200" prefHeight="30" visible="false"/>
                </VBox>
            </VBox>

            <!-- FORMA DE PAGO COMPACTA -->
            <Label text="Forma de Pago" styleClass="section-title"/>
            <VBox spacing="2">
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <CheckBox fx:id="cashCheckBox" text="Efectivo"/>
                    <TextField fx:id="cashAmountField" promptText="Monto" prefWidth="80" prefHeight="26" visible="false"/>
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <CheckBox fx:id="transferCheckBox" text="Transferencia"/>
                    <TextField fx:id="transferAmountField" promptText="Monto" prefWidth="80" prefHeight="26" visible="false"/>
                </HBox>
            </VBox>

            <!-- OBSERVACIONES -->
            <Label text="Observaciones" styleClass="section-title"/>
            <TextArea fx:id="notesTextArea" promptText="Observaciones..." wrapText="true" prefRowCount="3" prefHeight="65"/>

            <!-- BOTONES COMPACTOS -->
            <VBox spacing="5">
                <HBox spacing="8">
                    <Button text="Aceptar" fx:id="btnConfirm" styleClass="confirm-btn"
                            onAction="#confirmOrder" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefHeight="32"/>
                    <Button text="Cancelar" fx:id="btnCancel" styleClass="cancel-btn"
                            onAction="#cancelOrder" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefHeight="32"/>
                </HBox>
                <Button text="← Volver" fx:id="btnBack" styleClass="back-btn"
                        onAction="#goBack" prefHeight="30"/>

                <!-- CHECKBOX BAJA-->
                <HBox fx:id="adminContainer" visible="false" spacing="8" alignment="CENTER_LEFT"
                      style="-fx-padding: 2 0 0 0;">
                    <CheckBox fx:id="deletedCheckBox" text="Orden de Baja"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>