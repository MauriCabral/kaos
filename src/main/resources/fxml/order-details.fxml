<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.kaos.controller.OrderDetailsController" stylesheets="@../css/order-details.css" prefWidth="850" prefHeight="600" spacing="0">

    <!-- HEADER COMPACTO -->
    <HBox styleClass="header" alignment="CENTER" spacing="10">
        <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
            <Image url="@../image/logo.png"/>
        </ImageView>
        <Label text="Detalle del Pedido" styleClass="header-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="orderNumberLabel" styleClass="order-number"/>
    </HBox>

    <!-- CONTENIDO PRINCIPAL COMPACTO -->
    <HBox spacing="0" VBox.vgrow="ALWAYS">

        <!-- PANEL IZQUIERDO - ITEMS COMPACTO -->
        <VBox styleClass="items-panel" prefWidth="500" spacing="0">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Items del Pedido" styleClass="section-title"/>

            <ScrollPane fitToWidth="true" styleClass="items-scroll" VBox.vgrow="ALWAYS">
                <VBox fx:id="itemsContainer" spacing="8"/>
            </ScrollPane>

            <!-- RESUMEN COMPACTO -->
            <VBox styleClass="summary-container" spacing="8">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="Subtotal:" styleClass="summary-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="subtotalLabel" styleClass="summary-value" text="0.00"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="Delivery:" styleClass="summary-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="deliveryPriceLabel" styleClass="summary-value" text="0.00"/>
                </HBox>
                <Separator styleClass="summary-separator"/>
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="TOTAL:" styleClass="total-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalLabel" styleClass="total-value" text="0.00"/>
                </HBox>
            </VBox>
        </VBox>

        <Separator orientation="VERTICAL"/>

        <!-- PANEL DERECHO - TODO JUNTO Y COMPACTO -->
        <VBox styleClass="actions-panel" prefWidth="350" spacing="12">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- DATOS CLIENTE COMPACTO -->
            <Label text="Datos del Cliente" styleClass="section-title"/>
            <VBox spacing="6">
                <TextField fx:id="customerNameField" promptText="Nombre*" prefHeight="35"/>
                <TextField fx:id="customerAddressField" promptText="Dirección" prefHeight="35"/>
                <TextField fx:id="customerPhoneField" promptText="Teléfono" prefHeight="35"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <CheckBox fx:id="deliveryCheckBox" text="Delivery"/>
                    <TextField fx:id="deliveryPriceField" promptText="Precio" prefWidth="80" prefHeight="30" visible="false"/>
                </HBox>
            </VBox>

            <Label text="Forma de Pago" styleClass="section-title"/>
            <VBox spacing="3">
                <HBox spacing="6" alignment="CENTER_LEFT">
                    <CheckBox fx:id="cashCheckBox" text="Efectivo"/>
                    <TextField fx:id="cashAmountField" promptText="Monto" prefWidth="90" prefHeight="28" visible="false"/>
                </HBox>
                <HBox spacing="6" alignment="CENTER_LEFT">
                    <CheckBox fx:id="transferCheckBox" text="Transferencia"/>
                    <TextField fx:id="transferAmountField" promptText="Monto" prefWidth="90" prefHeight="28" visible="false"/>
                </HBox>
            </VBox>

            <!-- OBSERVACIONES COMPACTA -->
            <Label text="Observaciones" styleClass="section-title"/>
            <TextArea fx:id="notesTextArea" promptText="Observaciones..." wrapText="true" prefRowCount="3" prefHeight="70"/>

            <!-- BOTONES VISIBLES -->
            <VBox spacing="8">
                <HBox spacing="10">
                    <Button text="Aceptar" styleClass="confirm-btn" onAction="#confirmOrder" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefHeight="35"/>
                    <Button text="Cancelar" styleClass="cancel-btn" onAction="#cancelOrder" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefHeight="35"/>
                </HBox>
                <Button text="← Volver" styleClass="back-btn" onAction="#goBack" prefHeight="32"/>
            </VBox>
        </VBox>
    </HBox>
</VBox>