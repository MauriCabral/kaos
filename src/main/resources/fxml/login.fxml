<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToggleButton?>
<AnchorPane prefHeight="450.0" prefWidth="468.0" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kaos.controller.LoginController">
    <children>
        <!-- Card central -->
        <VBox alignment="CENTER" layoutX="25.0" layoutY="25.0" prefHeight="375.0" prefWidth="416.0" spacing="20.0" styleClass="login-card">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <!-- Título -->
            <Label styleClass="title-label" text="Bienvenido" />

            <!-- Campos de formulario -->
            <VBox spacing="15.0">
                <!-- Usuario -->
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Usuario" />
                    <TextField fx:id="usernameField" promptText="Ingresa tu usuario" styleClass="text-field" />
                </VBox>

                <!-- Contraseña -->
                <VBox spacing="5.0">
                    <Label styleClass="form-label" text="Contraseña" />
                    <HBox alignment="CENTER_LEFT" spacing="0">
                        <PasswordField fx:id="passwordField" promptText="Ingresa tu contraseña" styleClass="password-field" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="visiblePasswordField" promptText="Ingresa tu contraseña" styleClass="text-field" managed="false" visible="false" HBox.hgrow="ALWAYS" />
                        <ToggleButton fx:id="togglePasswordButton" styleClass="toggle-password-button" onAction="#togglePasswordVisibility" />
                    </HBox>
                </VBox>
            </VBox>

            <!-- Botón Login -->
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" text="Iniciar Sesión" styleClass="login-button">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>

            <!-- Enlace olvidé contraseña -->
            <Hyperlink styleClass="forgot-link" text="¿Olvidaste tu contraseña?" />

            <!-- Versión -->
            <Label fx:id="versionLabel" styleClass="version-label" text="Versión 1.0.0" />
        </VBox>
    </children>
</AnchorPane>